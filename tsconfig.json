{
  "extends": "./tsconfig.build.json",
  "exclude": [
    "docs/**/*"
  ],
  "compilerOptions": {
    "baseUrl": "./packages",
    "sourceMap": true,
    "paths": {
      "@cord.network/network": ["network/src"],
      "@cord.network/config": ["config/src"],
      "@cord.network/modules": ["modules/src"],
      "@cord.network/messaging": ["messaging/src"],
      "@cord.network/api": ["api/src"],
      "@cord.network/types": ["types/src"],
      "@cord.network/utils": ["utils/src"],
      "@cord.network/exchange": ["exchange/src"],
      "@cord.network/credential": ["credential/src"],
    }
  },
  "skipLibCheck": true
}
